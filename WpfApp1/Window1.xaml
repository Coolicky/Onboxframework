<mvc:ViewMvcBase x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
		xmlns:mvc="clr-namespace:Onbox.Mvc.V7;assembly=Onbox.Mvc.V7"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
        Title="Window1" Height="450" Width="800">
	<Grid>
		<StackPanel>
			<TextBox Text="{Binding Pet.Name, UpdateSourceTrigger=PropertyChanged}" />
			<Button Content="Edit" Click="OnEdit" ></Button>
			<Button Content="Add" Click="OnAdd" ></Button>
		</StackPanel>
	</Grid>
</mvc:ViewMvcBase>
