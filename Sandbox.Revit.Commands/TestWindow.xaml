<mvc:ViewMvcBase x:Class="Onbox.Sandbox.Revit.Commands.TestWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mvc="clr-namespace:Onbox.Mvc.V1;assembly=Onbox.mvc"
                 xmlns:c="clr-namespace:Onbox.Mvc.V1.Converters;assembly=Onbox.mvc"
                 xmlns:local="clr-namespace:Onbox.Sandbox.Revit.Commands"
                 ShowInTaskbar="False"
                 mc:Ignorable="d"
                 Title="TestWindow"
                 Height="545.666"
                 Width="554.858">
    <Grid>
        <StackPanel Visibility="{Binding IsLoading, Converter={c:BoolToVisibilityHideConverter}, ConverterParameter=False}">
            <Button IsEnabled="{Binding CanCloseWindow}"
                    IsCancel="True">Cancel</Button>
        </StackPanel>
        <mvc:Spinner />
        <mvc:ErrorIcon/>
        <mvc:WarningIcon/>
    </Grid>
</mvc:ViewMvcBase>
