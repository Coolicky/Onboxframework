<mvc:ViewMvcBase x:Class="Onbox.Sandbox.Revit.Commands.TestWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mvc="clr-namespace:Onbox.Mvc.V1;assembly=Onbox.mvc"
                 xmlns:c="clr-namespace:Onbox.Mvc.V1.Converters;assembly=Onbox.mvc"
                 xmlns:local="clr-namespace:Onbox.Sandbox.Revit.Commands"
                 ShowInTaskbar="False"
                 mc:Ignorable="d"
                 Title="TestWindow"
                 ResizeMode="NoResize"
                 SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel mvc:If.OnErrorOrLoadingHide="True"
                    Height="300"
                    Width="300">
            <Button IsEnabled="{Binding CanCloseWindow}"
                    IsCancel="True">Cancel</Button>
            <Button mvc:Is.Confirm="True">Ok</Button>
        </StackPanel>
        <mvc:Spinner />
        <mvc:ErrorIcon OnRetry="OnRetry"
                       CanRetry="True" />
    </Grid>
</mvc:ViewMvcBase>
