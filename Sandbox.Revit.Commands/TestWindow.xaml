<mvc:ViewMvcBase x:Class="Onbox.Sandbox.Revit.Commands.TestWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mvc="clr-namespace:Onbox.Mvc.V1;assembly=Onbox.Mvc.V1"
                 xmlns:c="clr-namespace:Onbox.Mvc.V1.Converters;assembly=Onbox.Mvc.V1"
                 xmlns:local="clr-namespace:Onbox.Sandbox.Revit.Commands"
                 ShowInTaskbar="False"
                 mc:Ignorable="d"
                 Title="TestWindow"
                 ResizeMode="NoResize"
                 Height="300"
                 Width="300">
    <Grid>
        <WrapPanel mvc:If.OnErrorOrLoadingHide="True"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right">
            <Button IsEnabled="{Binding CanCloseWindow}"
                    IsCancel="True"
                    Width="80">Cancel</Button>
            <Button mvc:Is.Confirm="True"
                    Width="80">Ok</Button>
        </WrapPanel>
        <mvc:Spinner />
        <mvc:MessageStack />
        <mvc:ErrorIcon />
    </Grid>
</mvc:ViewMvcBase>
